# Test Environment Configuration
NODE_ENV=test

# Test Database Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_NAME=wa_gateway_test
TEST_DB_USER=root
TEST_DB_PASSWORD=

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=1h

# Server Configuration
PORT=3001
API_VERSION=v1

# Redis Configuration (Test)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Cache Configuration
CACHE_TTL=300
CACHE_PREFIX=test:wa_gateway:

# Email Configuration (Test)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=test_user
SMTP_PASS=test_password

# File Upload Configuration
UPLOAD_PATH=./uploads/test
MAX_FILE_SIZE=5242880

# Rate Limiting (Test - More lenient)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# WhatsApp Service Configuration (Mock)
WHATSAPP_SERVICE_URL=http://localhost:3002
WHATSAPP_API_KEY=test-api-key

# Logging Configuration
LOG_LEVEL=error
LOG_FILE=./logs/test.log

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET=test-session-secret

# API Documentation
SWAGGER_TITLE=KlikWhatsApp API (Test)
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=WhatsApp Gateway API for testing

# Queue Configuration
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=
QUEUE_REDIS_DB=2

# Notification Configuration
NOTIFICATION_QUEUE_NAME=test_notifications
EMAIL_QUEUE_NAME=test_emails
SMS_QUEUE_NAME=test_sms

# Analytics Configuration
ANALYTICS_CACHE_TTL=300
ANALYTICS_BATCH_SIZE=100

# Template Configuration
TEMPLATE_CACHE_TTL=600
TEMPLATE_APPROVAL_REQUIRED=false

# Broadcast Configuration
BROADCAST_BATCH_SIZE=50
BROADCAST_DELAY_MS=1000
BROADCAST_MAX_RETRIES=3

# Webhook Configuration
WEBHOOK_TIMEOUT=5000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=1000 